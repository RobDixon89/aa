---
import { PortableText as PT } from "astro-portabletext";
import { Block, List } from "astro-portabletext/components";
import type { PortableTextComponents } from "astro-portabletext/types";
import Marks from "./marks.astro";
import Paragraphs from "./paragraphs.astro";

type Props = {
  blockContent: any;
};

const { blockContent } = Astro.props;

const components: Partial<PortableTextComponents> = {
  list: List,
  mark: Marks,
  block: {
    h1: Block,
    h2: Block,
    h3: Block,
    h4: Block,
    h5: Block,
    h6: Block,
    blockquote: Block,
    normal: Block,
    large: Paragraphs as any,
    small: Paragraphs as any,
    subtitle: Paragraphs as any,
  },
};
---

<PT value={blockContent} components={components} />
